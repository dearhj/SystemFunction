<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:constraint_referenced_ids="home,recent,back,navigation,status,adb,bluetooth,wifi,data,gps,camera,microphone,screen_shot,screen_capture,tf_card,phone_call,hot_spot,sms,mms,share,system_update,install_app,uninstall_app,restore_factory,device_manager,reset,shut_down,reboot,shot,install,ota,app_manager,net_manager,get_recent,remove_recent"
        app:flow_horizontalGap="10dp"
        app:flow_wrapMode="chain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_home" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_recent" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_back" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_navigation" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_status" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/adb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_adb" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_bluetooth" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_wifi" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_data" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_gps" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_camera" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_microphone" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/screen_shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_screen_shot" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/tf_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_tf_card" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/phone_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_phone_call" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/hot_spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_hot_spot" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_sms" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/system_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_system_update" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/install_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_install_app" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/uninstall_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_uninstall_app" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/restore_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_restore_factory" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/device_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_manager" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shut_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shut_down" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reboot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reboot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/install"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/install" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ota" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/app_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_manager" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近任务" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/remove_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除最近任务" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/net_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络管理"
        android:visibility="gone" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/net_manager" />
</androidx.constraintlayout.widget.ConstraintLayout>